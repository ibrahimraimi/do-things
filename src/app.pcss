@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
	--font-family-ibm-plex-mono: "IBM Plex Mono", monospace;

	--font-thin: 100;
	--font-extralight: 200;
	--font-light: 300;
	--font-regular: 400;
	--font-medium: 500;
	--font-semibold: 600;
	--font-bold: 700;

	--font-style-normal: normal;
	--font-style-italic: italic;
}

@layer {
	body {
		font-family: var(--font-family-ibm-plex-mono);
		font-weight: var(--font-extralight);
		font-style: var(--font-style-normal);
	}
}
